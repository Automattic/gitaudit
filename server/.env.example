# GitHub OAuth (required for syncing real repositories)
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=your_random_session_secret_here

# Server config
PORT=3001
CLIENT_URL=http://localhost:3000
# ALLOWED_ORIGINS=https://example.com,https://other.example.com  # Comma-separated list of allowed CORS origins (defaults to CLIENT_URL)

# Database path
# Local development: ./codevitals.db
# Railway deployment: /data/codevitals.db
DATABASE_PATH=./codevitals.db
